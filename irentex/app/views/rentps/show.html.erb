<div class="row">
  <div class="col-md-6 col-md-offset-3">
<p>
	<b>Rentpoint Location :</b> <%=h	@rentp.rp_address  %> <%=h @rentp.rp_gover  %> 
</p>

<%= link_to 'add new item',  new_user_rentp_item_path(:rentp_id => @rentp.id) %>
<br>
<br>
<h3>Items:</h3>
<table border="1">
  <tr>
    <th>Item Name</th>
    <th>Item Description</th>
    <th style="width:50%" >Item Images</th>
    <th>Item Price</th>
    <th colspan="3"></th>
  </tr>
<% @rentp.items.each do |i| %>
<tr>
      <td><%= i.item_name %></td>
      <td><%= i.item_desc %></td>
      <td>
      <table>
        <% i.item_attachments.all.each do |p| %>
            <tr>
              <td> <%= image_tag p.image.thumb.url %></td>
              <td> <%= link_to "show image", item_attachment_path(p) %></td>
              <td> <%= link_to "Edit image", edit_item_attachment_path(p) %></td>
            </tr>
        <% end %> 
      </table> </td>
      <td><%= i.item_price %></td>
      
      <td><%= link_to 'Show', user_rentp_item_path(:id => i,:rentp_id => @rentp.id) %></td>
      <td><%= link_to 'Edit', edit_user_rentp_item_path(:id => i,:rentp_id => @rentp.id) %></td>
      <td><%= link_to 'Destroy', user_rentp_item_path(:id => i,:rentp_id => @rentp.id),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>

</table>

<%= link_to 'Back', user_path(:id => params[:user_id]) %>

</div>
</div>