<div class="row">
  <div class="col-md-6 col-md-offset-3">
<p>
	<b>Rentpoint Location :</b> <%=h	@rentp.rp_address  %> <%=h @rentp.rp_gover  %> 
</p>

<br>
<br>
<h3>Items:</h3>
<table border="1">
  <tr>
    <th>Item Name</th>
    <th>Item Description</th>
    <th style="width:50%" >Item Images</th>
    <th>Item Price</th>
    <th colspan="3"></th>
  </tr>
<%
count =0 
@items.each  do |i| %>
<tr>
      <td><%= i.item_name %></td>
      <td><%= i.item_desc %></td>
      <td> <%= image_tag @item_attachments.fetch(count).image.thumb.url %></td>
      <td><%= i.item_price %></td>

    </tr>
<% count = count +1  
end %>

</table>

</div>
</div>