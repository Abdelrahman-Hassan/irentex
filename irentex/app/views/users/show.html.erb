<div class="row">
  <div class="col-md-6 col-md-offset-3">
<p><%= link_to 'create rentpoint', new_user_rentp_path(@user.id) %></p>
<p>
	<b>Welcome </b> <%=	@user.usr_fname  %>  <%=	@user.usr_lname  %> !
</p>

<p>
	<b>logged-in via: </b> <%=	@user.usr_email  %> <br>
	<b>Registered telephone no.: </b> <%=	@user.usr_tel  %> <br> 
    <b>Date of Birth is:  </b> <%=	@user.usr_dob  %> <br>
	<b>Your Address is:  </b> <%= @user.usr_address  %> , <%=h @user.usr_gover  %> <br>
</p>

<h2>Rentpoints:</h2>
<table  style="width:60%">
	<tr>
		<th>ID</th>
		<th>Location </th>
		<th colspan="3"></th>
	</tr>
	<% @user.rentps.each do |rp| %>
	  <tr>
	    <td> <%= rp.id %>
	    <td> <%= rp.rp_address %> <%= rp.rp_gover %> </td>
	    <td> <%= link_to 'show rentpoint', user_rentp_path(:id => rp.id, :user_id => @user.id) %> </td>
	  </tr>
<% end %>
</table>
<%= link_to 'log out', home_index_path %>
</div>
</div>